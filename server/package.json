{
	"name": "security-blog-server",
	"version": "1.0.0",
	"description": "",
	"main": "dist/server.js",
	"scripts": {
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
		"migrations": "npm run typeorm migration:run",
		"copy-files": "copyfiles -E -f ./*.env ./dist/",
		"lint": "eslint \"src/**/*.ts\" --quiet --fix",
		"clean": "rimraf ./dist/*",
		"compile": "tsc",
		"post:compile": "ef-tspm",
		"build": "npm run compile && npm run post:compile && npm run copy-files",
		"rebuild": "npm run clean && npm run build",
		"start:dev": "node -r dotenv-with-expand/config . dotenv_config_path=./dist/config.dev.env",
		"dev": "nodemon"
	},
	"repository": {
		"type": "git",
		"url": "git+https://gitlab.com/ruegerj/security-blog.git"
	},
	"author": "Jan RÃ¼ger",
	"license": "ISC",
	"bugs": {
		"url": "https://gitlab.com/ruegerj/security-blog/issues"
	},
	"homepage": "https://gitlab.com/ruegerj/security-blog#readme",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts}": [
			"eslint --fix"
		]
	},
	"devDependencies": {
		"@ef-carbon/tspm": "^2.2.5",
		"@types/express": "^4.17.9",
		"@types/express-rate-limit": "^5.1.0",
		"@types/hpp": "^0.2.1",
		"@types/morgan": "^1.9.2",
		"@types/toobusy-js": "^0.5.2",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"copyfiles": "^2.4.0",
		"eslint": "^7.14.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.3.0",
		"lint-staged": "^10.5.2",
		"nodemon": "^2.0.6",
		"prettier": "^2.2.0",
		"rimraf": "^3.0.2",
		"ts-node": "^9.1.0",
		"tsc": "^1.20150623.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.0.5"
	},
	"dependencies": {
		"appdata-path": "^1.0.0",
