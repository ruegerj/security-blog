		"express-rate-limit": "^5.2.3",
		"helmet": "^4.2.0",
		"hpp": "^0.2.3",
		"morgan": "^1.10.0",
		"reflect-metadata": "^0.1.13",
		"sqlite3": "^5.0.0",
		"toobusy-js": "^0.5.1",
		"typedi": "^0.8.0",
		"typeorm": "^0.2.29",
		"typeorm-typedi-extensions": "^0.2.3",
		"winston": "^3.3.3",
		"xss-clean": "^0.1.1"
	}
